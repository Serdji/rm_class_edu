.tag
  font-size 1px
  display flex
  flex-wrap wrap
  justify-content space-between

  &__theme
    display inline-block
    vertical-align top
    width 290px
    margin-bottom 20px
    background blockBack

  &__short-stripe
    img
      width 100%

  &__content,
  &__footer,
  &__question
    centerBlock()

  &__content
    position relative
    padding 20px 20px 0 20px
    box-sizing border-box
    height 147px
    align-content flex-start
    flex-wrap wrap
    .question-common__social
      align-self flex-start
      position absolute
      right 10px
      top 20px

  &__cover
    cursor pointer
    align-self flex-start
    img
      width 72px

  &__title
    position absolute
    bottom -5px
    left 20px
    font-size 20px
    color #000000
    line-height 24px
    right 10px
    word-wrap break-word
    font-family CorsicaRamblerLX-SemiBold

  &__footer
    height 48px
    padding 0 20px

  &__icon
    display inline-block
    width 14px
    height 14px
    margin-right 6px

    &-svg
      width 100%
      height 100%

  &__counter
    font-size 13px
    color #000000
    &._question
      margin-right 20px

