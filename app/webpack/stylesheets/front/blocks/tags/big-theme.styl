.big-theme
  padding 20px
  background blockBack
  height 200px
  box-sizing border-box
  margin-bottom space
  width 600px

  &__wide-stripe
    img
      width 100%

    &-blue
      width 100%
      height 5px
      background #315efb

  &__wrapper
    font-size 1px
    display inline-block

  &__header,
  &__counters
    centerBlock()

  &__content
    display flex
    font-size 1px
    img
      width 72px

  &__cover
    cursor pointer
    margin-right 18px

  &__title
    font-size 24px
    color #000000
    display inline-block
    font-family CorsicaRamblerLX-SemiBold
    margin 0

  &__counters
    margin-top 7px
    span
      margin-right 18px
      font-size 13px
      color #000000

  &__icon
    display inline-block
    width 14px
    height 14px
    margin-right 6px

    &-svg
      width 100%
      height 100%

