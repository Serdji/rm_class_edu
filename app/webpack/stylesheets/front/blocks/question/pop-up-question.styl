.pop-up-question
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0, 0, 0, 0.8)
  z-index 2
  display none
  overflow scroll
  padding 20px

  &._activ
    display flex

  &__block
    position relative
    padding 40px 50px
    box-sizing border-box
    width 660px
    background blockBack
    margin auto

  &__title
    font-weight bold
    font-size 30px
    color #262626
    margin-bottom 24px

  &__close
      position absolute
      cursor pointer
      top 12px
      right 12px
      width 20px
      height 20px
      opacity 0.4
      transition transAll
      &:hover
        opacity 1
        .pop-up-question__close-svg
          opacity 0
          &._activ
            opacity 1

      &-svg
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        opacity 1
        transition transAll

        &._activ
          opacity 0


  &__form

    label
      font-size 14px

    input
      width 100%
      height 45px
      font-size 16px

  &__label
    font-size 14px
    line-height 2.86
    color #262626

  &__quantity-symbols
    opacity 0.4
    font-size 13px
    line-height 1.54
    color #262626

  &__box
    margin-top 25px
    margin-bottom 15px

    &._disabled-user
      .pop-up-question__login
        display none

  &__box,
  &__login
    centerBlock()

  &__button
    margin-right 20px

  &__avatar
    width 24px
    height 24px
    border-radius 50%
    overflow hidden
    margin-right 8px

  &__name
    font-size 13px
    line-height 1.85
    color #262626

  &__agreement
    opacity 0.6
    font-size 12px
    line-height 1.33
    color #262626
    a
      color #262626
      text-decoration underline

._mb
  margin-bottom 10px
