.footer
  &._top
    border-bottom 1px solid #4b5264
  ul
    li
      display inline-block
      list-style-type none
      color #ffffff

      a, span
        color @color

  &__rambler,
  &__class
    position absolute
    top 50%
    height 22px
    margin-top -11px

  &__rambler
    left 0
    width 62%

  &__class
    cursor pointer
    right 0
    width 30%

  &__box,
  &__logo
  &__social,
  &__сopyright,
  &__сopyright-age-limit
    centerBlock()
    &._top
      height 90px
    &._bottom
      height 66px

  &__logo
    position relative
    width 120px
    height 100%
    margin-right 43px

    &-svg
      width 120px
      height 20px

  &__menu
    &._top-menu,
    &._bottom-menu
      li
        margin-right 28px
        a, span
          font-size 13px
          &._activ
            font-weight bold

    &._bottom-menu
      li
        a
          font-size 11px

  &__social,
  &__сopyright
    margin-left auto
    height 100%

  &__social
    &-vk,
    &-fb,
    &-ok,
    &-tw,
    &-lj
      position relative
      width 30px
      height 30px
      margin-left 10px
      &:hover
        .footer__social-svg
          width 100%
          height 100%
          opacity 0
          &._active
            opacity 1

    &-svg
      width 100%
      height 100%
      opacity 1
      transition transAll

      &._active
        position absolute
        top 0
        left 0
        opacity 0

  &__сopyright

    &-title,
    &-age-limit,
    a
      color #dfe4ec
      font-size 11px
      opacity 0.8

    &-title
      margin-right 20px

    &-age-limit
      justify-content center
      width 39px
      height 26px
      border solid 1px #4b5264

