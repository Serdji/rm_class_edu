.popular-themes
  // margin-bottom 60px

  &__short-stripe
    font-size 1px

  &__theme
    display flex
    width 280px
    flex-direction column
    justify-content center
    padding 0 19px
    height 90px
    background #fff
    margin-bottom 10px
    box-sizing border-box
    &:nth-last-child(1)
      margin-bottom 0

  &__title
    font-size 18px
    color #000000
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin-bottom 12px
    font-family CorsicaRamblerLX-SemiBold

  &__question
    centerBlock()

  &__icon
    display inline-block
    width 14px
    height 15px
    margin-right 6px

    &-svg
      width 100%
      height 100%

  &__counter
    font-size 13px
    color #000000
    &._question
      margin-right 13px
