.reference-block
  background blockBack
  padding 10px 25px

  &__title
    textTransUp()
    font-size 12px
    font-weight 500
    font-style normal
    font-stretch normal
    line-height 4.0
    letter-spacing 0.8px
    color #4a4a4a

  &__icon
    text-align center
    margin-bottom 20px
    height 138px
    &-svg
      width 100%
      height 100%

  &__reference
    padding-right 10px
    a
      display block
      margin-bottom 20px
      font-size 13px
      line-height 1.46
      color #404040
