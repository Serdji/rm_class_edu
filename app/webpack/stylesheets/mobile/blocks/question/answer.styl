.answer
  background blockBack
  margin-bottom space
  padding-top 20px

  .questions__text
    font-size 17px
    line-height 1.47
    word-wrap break-word

  &__wrapper
    centerBlock()
    overflow hidden
    position relative
    justify-content center
    margin-top 20px
    height 48px

  &__button
    transition transAll
    position fixed
    bottom 0
    left 0
    transform translate3d(0, 48px, 0)
    width 100%
    height 48px
    z-index 4


    &._start
      transform translate3d(0, 0, 0)

    &._stop
      position relative
      transform translate3d(0, 0, 0)
      height 48px
      z-index 0
