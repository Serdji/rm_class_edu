.menu

  &._hidden
    .menu__curtain
      display none
    .menu__block
      transform translate3d(-100%, 0, 0)
    .menu__close
      opacity 0


  &__block
    position fixed
    transform translate3d(0, 0, 0)
    top 0
    height 100%
    transition transAll
    box-sizing border-box
    background #343b4c
    width 100%
    z-index 11
    display flex
    flex-direction column
    overflow hidden

  &__border
    centerBlock()
    border-bottom 1px solid #666c7e
    &._header
      height 80px

  &__header
    padding 0 20px
  &__logo
    width 144px
    height 56px

    &-svg
      width 100%
      height 100%

  &__close
    margin-left auto
    margin-bottom 3px
    top 28px
    width 15px
    height 15px
    opacity 1
    transition transAll

    &-svg
      width 100%
      height 100%

  &__point
    height 44px
    padding 0 20px


    //&._activ
    //  background rgba(141, 150, 178, 0.2)

  &__icon
    width 20px
    height 20px
    opacity 0.3
    margin-right 10px

    &._theme
      width 23px
      height 20px

    &-svg
      width 100%
      height 100%

  &__title
    font-size 16px
    line-height 2.75
    color #ffffff

  &__counter
    opacity 0.6
    font-size 14px
    line-height 3.14
    color #ffffff
    margin-left auto

  &__popular
    margin-left auto
    font-family Roboto
    font-size 13px
    line-height 3.23
    letter-spacing 0.9px
    color #8d96b2
    textTransUp()
    centerBlock()

    &-arrow
      width 20px
      height 20px
      margin-left 5px
      centerBlock()
      &-svg
        width @width
        height @height

  &__present-ques
    padding 0 20px
    margin-top auto
    margin-bottom 28px

    &-button
      height 45px

  &__author
    padding 0 20px

    &._hidden
      display none

    &-button
      centerBlock()
      padding 0 40px 0 20px
      height 36px
      border-radius 100px
      border solid 1px rgba(255, 255, 255, .4)
      margin-bottom 28px

      span
        flex-grow 1
        width 160px
        height 36px
        opacity 0.6
        font-family Roboto
        font-size 14px
        line-height 2.57
        text-align center
        color #ffffff

    &-icon
      width 20px
      fill #ffffff

  &__user
    centerBlock()
    padding 0 20px
    background #272d3c
    height 63px

    &._hidden
      display none

    &-avatar
      width 36px
      height 36px
      border-radius 50%
      background-size cover
      background-position 50%
      margin-right 15px

    &-name
      font-size 14px
      font-family CorsicaRamblerLX-SemiBold
      line-height 1.21
      color #ffffff

     &-output
       margin-left auto
       font-size 13px
       text-align right
       color #8d96b2
