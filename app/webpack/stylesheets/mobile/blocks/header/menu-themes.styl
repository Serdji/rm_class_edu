.menu-themes
  position absolute
  transform translate3d(0, 0, 0)
  top 80px
  transition transAll
  box-sizing border-box
  background rgb(46, 52, 68);
  width 100%
  height calc(100% - 80px)
  z-index 11
  display flex
  flex-direction column

  &._hidden
    transform translate3d(100%, 0, 0)

  &__header
    padding 0 20px
    height 55px

  &__border
    centerBlock()
    height 48px
    border-bottom 1px solid #666c7e

    span
      opacity 0.8
      font-family Roboto
      font-size 16px
      line-height 1.25
      color #ffffff

    .menu__popular-arrow
      margin-left 0
      margin-right 10px
      transform rotate(180deg)

  &__menu
    box-sizing border-box
    padding 17px 20px 25px 20px
    height 100%
    overflow scroll

  &__theme
    display block
    font-size 1px
    width 100%
    height 36px
    margin-bottom 17px
    &:nth-last-child(1)
      margin-bottom 30px


  &__img,
  &__block
    display inline-block
    height 36px
    vertical-align middle

  &__img
    width 36px
    background-size cover
    background-position 50%

    img
      width 100%

  &__block
    margin-left 15px
    width calc(100% - 36px - 15px)


  &__title
    textEllipsis()
    font-family CorsicaRamblerLX-Regular
    font-size 16px
    line-height 1.25
    color #ffffff
    margin-top -2px

  &__counter
    opacity 0.4
    font-family Roboto
    font-size 14px
    line-height 1.2
    color #ffffff

  &__sub-theme
    margin-bottom 20px
    &-title
      font-size 18px
      font-weight 600
      line-height 1.89
      color #eef2f4
      font-family CorsicaRamblerLX-SemiBold

      a
        color white

    &-point
      opacity 0.8
      font-family CorsicaRamblerLX-Regular
      font-size 16px
      line-height 1.75
      color #eef2f4

  &__button
    width 100%
    height 45px
